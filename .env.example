# Server Configuration
PORT=3001

# MongoDB Configuration
DB_USER=your_mongodb_username
DB_PASS=your_mongodb_password
DB_CLUSTER=your_cluster_url.mongodb.net
DB_NAME=BillManagementDB
# Optional: Full MongoDB URI (if provided, overrides DB_USER/DB_PASS/DB_CLUSTER)
# MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/BillManagementDB?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# GROQ AI Configuration
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.3-70b-versatile

# SMTP Email Configuration (for sending invoices)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=SmartBills <your_email@gmail.com>
